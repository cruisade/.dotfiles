exec "xrandr --output DP-1 --right-of DP-2"
exec "setxkbmap -option ctrl:nocaps -layout us,ru -option 'grp:win_space_toggle'"
exec --no-startup-id feh --bg-fill ~/.dotfiles/wallpaper-firewatch-gray.jpg
exec_always --no-startup-id $HOME/.config/polybar/polybar.sh

set $mod Mod4
font pango:monospace 9

set $right DP-1
set $left DP-2


# binds
bindsym Control+Print exec gnome-screenshot -i

bindsym $mod+Left focus left
bindsym $mod+Down focus down
bindsym $mod+Up focus up
bindsym $mod+Right focus right

bindsym $mod+Shift+Left move left
bindsym $mod+Shift+Down move down
bindsym $mod+Shift+Up move up
bindsym $mod+Shift+Right move right

bindsym $mod+Return exec alacritty
bindsym $mod+Ctrl+q kill

bindcode $mod+48 layout toggle split
bindcode $mod+47 layout tabbed
bindcode $mod+Ctrl+47 layout stacking

bindsym $mod+Tab exec "rofi -theme ~/.dotfiles/.config/rofi/nord.rasi -show window"
bindsym $mod+Ctrl+Tab exec "rofi -theme ~/.dotfiles/.config/rofi/nord.rasi -combi-modi drun,run -show combi"
bindsym $mod+Ctrl+c reload
bindsym $mod+Ctrl+r restart
bindsym $mod+Ctrl+e exec "i3-nagbar -t warning -m 'You pressed the exit shortcut. Do you really want to exit i3? This will end your X session.' -B 'Yes, exit i3' 'i3-msg exit'"
bindsym $mod+l exec "i3lock -c 000000"

bindsym $mod+f fullscreen toggle

bindsym $mod+m move workspace to output $right
bindsym $mod+Shift+m move workspace to output $left


# configure workspaces
bindsym $mod+1 workspace 1
bindsym $mod+2 workspace 2
bindsym $mod+3 workspace 3
bindsym $mod+q workspace q
bindsym $mod+w workspace w
bindsym $mod+e workspace e
bindsym $mod+a workspace a
bindsym $mod+s workspace s
bindsym $mod+d workspace d

bindsym $mod+Shift+1 move container to workspace 1
bindsym $mod+Shift+2 move container to workspace 2
bindsym $mod+Shift+3 move container to workspace 3
bindsym $mod+Shift+q move container to workspace q
bindsym $mod+Shift+w move container to workspace w
bindsym $mod+Shift+e move container to workspace e
bindsym $mod+Shift+a move container to workspace a
bindsym $mod+Shift+s move container to workspace s
bindsym $mod+Shift+d move container to workspace d

workspace 1 output $left
workspace 2 output $right
workspace 3 output $right
workspace q output $left


# colors
client.focused          #3F8AC2 #096BAA #00BAA7 #00DA8E
client.focused_inactive #333333 #5F676A #ffffff #484e50
client.unfocused        #333333 #424242 #888888 #292d2e
client.urgent           #C10004 #900000 #ffffff #900000


# gaps
gaps inner 10
# gaps outer 2
for_window [class=".*"] border pixel 0
